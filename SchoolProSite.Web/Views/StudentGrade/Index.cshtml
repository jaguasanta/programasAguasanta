@model IEnumerable<SchoolProSite.Web.Models.StudentGradeModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Grados Estudiantes</h1>

<p>
    <a asp-action="Create">Crear Uno</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.EnrollmentID }) |
                @Html.ActionLink("Details", "Details", new { id=item.EnrollmentID }) 
            </td>
        </tr>
}
    </tbody>
</table>
